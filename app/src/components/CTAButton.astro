---
// components/CTAButton.astro (CTA compacto tipo “barra”)
interface Props {
  title: string;
  subtitle: string;
  href?: string;
  whatsappHref?: string;
}

const {
  title,
  subtitle,
  href = '/contacto',
  whatsappHref = 'https://wa.me/34633680002'
} = Astro.props;
---

<section class="px-4 py-2">
  <div class="bg-white border border-zinc-200 rounded-2xl p-5 shadow-sm flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <p class="text-[#1a2a3a] font-black text-lg">{title}</p>
      <p class="text-zinc-600 text-sm">{subtitle}</p>
    </div>

    <div class="flex flex-col sm:flex-row gap-3">
      <a
        href={href}
        class="inline-flex items-center justify-center gap-2 bg-[#cd5a37] hover:bg-[#b54f30] text-white font-black px-6 py-3 rounded-xl transition-all"
      >
        Pedir presupuesto
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </a>

      <a
        href={whatsappHref}
        target="_blank"
        class="inline-flex items-center justify-center gap-2 bg-[#25D366] text-white font-black px-6 py-3 rounded-xl hover:brightness-110 transition-all"
      >
        WhatsApp
      </a>
    </div>
  </div>
</section>
