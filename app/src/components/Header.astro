---
// Header.astro
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Servicios', href: '/servicios' },
  { name: 'Proyectos', href: '/proyectos' },
  { name: 'Contacto', href: '/contacto' },
];
---

<div class="hidden md:block bg-[#1a2a3a] text-white py-2.5 px-6 border-b border-white/5 relative z-[60]">
  <div class="max-w-7xl mx-auto flex justify-between items-center text-[10px] font-bold uppercase tracking-[0.2em]">
    <div class="flex items-center gap-6">
      <span class="flex items-center gap-2 text-zinc-300">
        <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
        Presupuestos sin compromiso en Madrid
      </span>
    </div>
    <div class="flex gap-6">
      <a href="tel:+34633680002" class="hover:text-[#cd5a37] transition-colors flex items-center gap-2 group">
        <svg class="w-3 h-3 text-[#cd5a37]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        WhatsApp: 633 680 002
      </a>
    </div>
  </div>
</div>

<header class="sticky top-0 z-50 w-full">
  <div class="bg-white/80 backdrop-blur-xl border-b border-zinc-200/50 shadow-sm relative z-50">
    <div class="flex items-center justify-between px-6 py-4 max-w-7xl mx-auto">

      <!-- LOGO -->
      <a href="/" class="group flex items-center gap-3 outline-none" aria-label="Estepa Reformas">
        <div class="w-10 h-10 bg-[#1a2a3a] group-hover:bg-[#cd5a37] rounded-lg flex items-center justify-center transition-all duration-500 shadow-md overflow-hidden">
          <img
            src="/img/logo-pequeño-removebg-preview.png"
            alt="Logo Estepa Reformas"
            class="w-full h-full object-contain select-none pointer-events-none"
          />
        </div>

        <div class="flex flex-col">
          <span class="text-[#1a2a3a] text-lg font-black tracking-tight leading-none">ESTEPA</span>
          <span class="text-[#cd5a37] text-[9px] font-bold tracking-[0.2em] uppercase mt-1">Reformas</span>
        </div>
      </a>

      <nav class="hidden md:flex items-center bg-zinc-100/80 p-1 rounded-full border border-zinc-200/50">
        {navItems.map(item => (
          <a
            href={item.href}
            class={`px-5 py-2 rounded-full text-[11px] font-bold uppercase tracking-wider transition-all ${
              currentPath === item.href
                ? 'bg-white text-[#cd5a37] shadow-sm'
                : 'text-zinc-500 hover:text-[#1a2a3a]'
            }`}
          >
            {item.name}
          </a>
        ))}
      </nav>

      <div class="hidden md:block">
        <a
          href="/contacto"
          class="relative overflow-hidden group bg-[#cd5a37] text-white text-[11px] font-bold uppercase tracking-widest px-6 py-3 rounded-full transition-all hover:scale-105 shadow-lg shadow-orange-900/20"
        >
          <span class="relative z-10">Presupuesto Gratis</span>
          <div class="absolute inset-0 w-1/4 h-full bg-white/20 skew-x-[45deg] -translate-x-full group-hover:translate-x-[400%] transition-all duration-700"></div>
        </a>
      </div>

      <button
        id="mobile-menu-button"
        class="md:hidden flex flex-col gap-1.5 p-2 outline-none group relative z-[60]"
        aria-label="Menú"
      >
        <span class="w-6 h-0.5 bg-[#1a2a3a] transition-all duration-300"></span>
        <span class="w-6 h-0.5 bg-[#1a2a3a] transition-all duration-300"></span>
        <span class="w-6 h-0.5 bg-[#1a2a3a] transition-all duration-300"></span>
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden fixed inset-0 z-40 bg-white/95 backdrop-blur-2xl flex flex-col items-center justify-center transition-all duration-300"
  >
    <nav class="flex flex-col gap-8 text-center">
      {navItems.map(item => (
        <a
          href={item.href}
          class={`text-2xl font-black uppercase tracking-tighter transition-colors ${
            currentPath === item.href ? 'text-[#cd5a37]' : 'text-[#1a2a3a]'
          }`}
        >
          {item.name}
        </a>
      ))}
      <a
        href="tel:+34633680002"
        class="mt-4 px-8 py-4 bg-[#cd5a37] text-white font-bold rounded-full shadow-xl"
      >
        Llamar ahora
      </a>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const spans = menuButton?.querySelectorAll('span');
  const body = document.body;

  menuButton?.addEventListener('click', () => {
    const isOpened = mobileMenu?.classList.toggle('hidden');

    if (!isOpened) {
      body.style.overflow = 'hidden';
      if (spans) {
        spans[0].style.transform = 'translateY(8px) rotate(45deg)';
        spans[1].style.opacity = '0';
        spans[2].style.transform = 'translateY(-8px) rotate(-45deg)';
      }
    } else {
      body.style.overflow = 'auto';
      if (spans) {
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      }
    }
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      body.style.overflow = 'auto';
      if (spans) {
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      }
    });
  });
</script>

<style>
  #mobile-menu-button span {
    transform-origin: center;
  }
</style>
