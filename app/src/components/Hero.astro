---
// Hero Section con imagen de fondo
interface Props {
  imageUrl?: string;
  badge?: string;
  title: string;
  subtitle: string;
}

const { 
  imageUrl = 'https://images.unsplash.com/photo-1556912167-f556f1f39fdf?w=1200',
  badge = 'Est. 2008',
  title,
  subtitle
} = Astro.props;
---

<div class="px-4 py-6">
  <div class="relative h-80 lg:h-96 w-full overflow-hidden rounded-xl shadow-xl group">
    <div 
      class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105" 
      style={`background-image: linear-gradient(180deg, rgba(26, 42, 58, 0) 40%, rgba(26, 42, 58, 0.9) 100%), url('${imageUrl}');`}
    >
    </div>
    <div class="absolute bottom-0 left-0 p-6 w-full">
      <span class="inline-block px-2 py-1 mb-2 text-[10px] font-bold tracking-widest uppercase bg-[#cd5a37] text-white rounded">
        {badge}
      </span>
      <h2 class="text-white text-3xl lg:text-4xl font-bold leading-tight mb-2" set:html={title}></h2>
      <p class="text-white/80 text-sm max-w-[280px]">{subtitle}</p>
    </div>
  </div>
</div>