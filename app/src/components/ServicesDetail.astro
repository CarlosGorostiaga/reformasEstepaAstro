---
interface Props {
  service: {
    title: string;
    subtitle: string;
    category: string;
    description: string;
    heroImage: string;
    time: string;
    materials: string;
    gallery: Array<{
      image: string;
      title: string;
      location: string;
    }>;
  };
}

const { service } = Astro.props;
---

<!-- Floating WhatsApp Button -->
<a 
  href="https://wa.me/34633680002"
  target="_blank"
  class="fixed bottom-24 right-6 z-50 flex h-14 w-14 items-center justify-center rounded-full bg-[#25D366] text-white shadow-2xl hover:scale-110 active:scale-95 transition-transform"
>
  <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
  </svg>
</a>

<!-- Top Navigation Bar -->
<header class="sticky top-0 z-40 w-full bg-[#f6f5f3]/80 backdrop-blur-md border-b border-zinc-200">
  <div class="flex items-center justify-between p-4 max-w-7xl mx-auto">
    <a href="/servicios" class="flex h-10 w-10 items-center justify-center rounded-full bg-white shadow-sm hover:bg-zinc-50 transition-colors">
      <svg class="w-5 h-5 text-[#1a2a3a]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </a>
    <h1 class="text-sm font-bold uppercase tracking-[0.2em] text-[#1a2a3a]">Detalle de Servicio</h1>
    <button class="flex h-10 w-10 items-center justify-center rounded-full bg-white shadow-sm hover:bg-zinc-50 transition-colors" type="button" aria-label="Compartir">
      <svg class="w-5 h-5 text-[#1a2a3a]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
      </svg>
    </button>
  </div>
</header>

<main class="pb-32 max-w-7xl mx-auto">
  <!-- Hero Section -->
  <div class="px-4 py-4">
    <!-- ✅ menos alto en móvil, igual de bonito en desktop -->
    <div class="relative h-72 sm:h-80 lg:h-96 w-full overflow-hidden rounded-2xl bg-zinc-200 shadow-2xl">
      <div 
        class="absolute inset-0 bg-cover bg-center"
        style={`background-image: linear-gradient(180deg, rgba(0,0,0,0) 50%, rgba(0,0,0,0.7) 100%), url('${service.heroImage}');`}
      ></div>
      <div class="absolute bottom-6 left-6 right-6">
        <span class="mb-2 inline-block rounded-full bg-[#cd5a37]/90 px-3 py-1 text-[10px] font-bold uppercase tracking-wider text-white backdrop-blur-sm">
          {service.category}
        </span>
        <h2 class="text-3xl font-bold leading-tight text-white">{service.title}</h2>
        <!-- ✅ si quieres meter subtitle aquí, queda bien -->
        <p class="mt-2 text-white/80 text-sm max-w-xl">{service.subtitle}</p>
      </div>
    </div>
  </div>

  <!-- Service Description -->
  <section class="mt-8 px-4">
    <p class="text-lg leading-relaxed text-[#1a2a3a]/80">
      {service.description}
    </p>
    <div class="mt-6 grid grid-cols-2 gap-4">
      <div class="rounded-xl bg-white p-5 shadow-sm border border-zinc-200">
        <svg class="w-6 h-6 text-[#cd5a37] mb-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <h4 class="text-sm font-bold text-[#1a2a3a]">Materiales</h4>
        <p class="text-xs text-zinc-500">{service.materials}</p>
      </div>
      <div class="rounded-xl bg-white p-5 shadow-sm border border-zinc-200">
        <svg class="w-6 h-6 text-[#cd5a37] mb-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        <h4 class="text-sm font-bold text-[#1a2a3a]">Tiempo</h4>
        <p class="text-xs text-zinc-500">{service.time}</p>
      </div>
    </div>
  </section>

  <!-- Project Gallery -->
  <section class="mt-12">
    <div class="flex items-center justify-between px-4 pb-4">
      <h3 class="text-2xl font-bold tracking-tight text-[#1a2a3a]">Galería de Proyectos</h3>
      <a href="/proyectos" class="text-xs font-semibold text-[#cd5a37] uppercase hover:underline">Ver todos</a>
    </div>

    <!-- ✅ contenedor con “fade” lateral y scroll padding -->
    <div class="relative">
      <!-- fades -->
      <div class="pointer-events-none absolute left-0 top-0 h-full w-8 bg-gradient-to-r from-[#f6f5f3] to-transparent z-10"></div>
      <div class="pointer-events-none absolute right-0 top-0 h-full w-8 bg-gradient-to-l from-[#f6f5f3] to-transparent z-10"></div>

      <!-- ✅ el arreglo real del “pegado”: pl/pr + scroll-pl/pr -->
      <div class="scrollbar-hide flex gap-4 overflow-x-auto pl-4 pr-4 pb-2 snap-x snap-mandatory scroll-pl-4 scroll-pr-4">
        {service.gallery.map((project, idx) => (
          <div class="min-w-[260px] sm:min-w-[280px] lg:min-w-[320px] shrink-0 snap-start">
            <div 
              class="h-80 w-full rounded-xl bg-zinc-200 bg-cover bg-center shadow-md hover:shadow-xl transition-shadow"
              style={`background-image: url('${project.image}');`}
            ></div>
            <div class="mt-3">
              <p class="font-bold text-[#1a2a3a]">{project.title}</p>
              <p class="text-sm text-zinc-500">{project.location}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="mt-12 px-4">
    <div class="rounded-2xl bg-white p-6 lg:p-8 shadow-2xl border border-zinc-200">
      <h3 class="text-2xl lg:text-3xl font-bold mb-2 text-[#1a2a3a]">Solicitar Presupuesto</h3>
      <p class="text-sm text-zinc-600 mb-6">Déjanos tus datos y te contactaremos en menos de 24 horas.</p>
      
      <form action="https://formspree.io/f/mgoogenj" method="POST" class="space-y-4">
        <input type="hidden" name="servicio" value={service.title} />
        
        <div>
          <label class="block text-[10px] font-bold uppercase tracking-widest text-zinc-400 mb-2">Nombre Completo</label>
          <input 
            name="nombre"
            class="w-full rounded-xl border-2 border-zinc-200 bg-zinc-50 px-4 py-3 text-sm focus:border-[#cd5a37] focus:ring-2 focus:ring-[#cd5a37] outline-none transition" 
            placeholder="Ej. Juan Pérez"
            type="text"
            required
          />
        </div>
        
        <div>
          <label class="block text-[10px] font-bold uppercase tracking-widest text-zinc-400 mb-2">WhatsApp / Teléfono</label>
          <input 
            name="telefono"
            class="w-full rounded-xl border-2 border-zinc-200 bg-zinc-50 px-4 py-3 text-sm focus:border-[#cd5a37] focus:ring-2 focus:ring-[#cd5a37] outline-none transition" 
            placeholder="+34 600 000 000"
            type="tel"
            required
          />
        </div>
        
        <div>
          <label class="block text-[10px] font-bold uppercase tracking-widest text-zinc-400 mb-2">Detalles del Proyecto</label>
          <textarea 
            name="detalles"
            class="w-full rounded-xl border-2 border-zinc-200 bg-zinc-50 px-4 py-3 text-sm focus:border-[#cd5a37] focus:ring-2 focus:ring-[#cd5a37] outline-none transition resize-none" 
            placeholder="Cuéntanos sobre tu proyecto..."
            rows="4"
            required
          ></textarea>
        </div>
        
        <button 
          class="mt-4 w-full rounded-xl bg-[#cd5a37] py-4 text-sm font-bold text-white transition-all hover:bg-[#b54f30] active:scale-[0.98] flex items-center justify-center gap-2"
          type="submit"
        >
          <span>Enviar Solicitud</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </button>
      </form>
    </div>
  </section>

  <!-- Guarantee Section -->
  <section class="mt-8 px-4 flex items-center gap-4 bg-[#cd5a37]/10 p-6 mx-4 rounded-2xl border border-[#cd5a37]/20">
    <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-full bg-[#cd5a37] text-white">
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
    </div>
    <div>
      <h4 class="font-bold text-[#cd5a37]">Garantía de Satisfacción</h4>
      <p class="text-xs text-zinc-700">Todos nuestros trabajos cuentan con 2 años de garantía en mano de obra.</p>
    </div>
  </section>
</main>

<style>
  .scrollbar-hide::-webkit-scrollbar { display: none; }
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
</style>
