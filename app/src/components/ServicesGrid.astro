---
// Grid de servicios
interface Props {
  showTitle?: boolean;
  linkToDetails?: boolean;
}

const { showTitle = true, linkToDetails = false } = Astro.props;

const services = [
  {
    slug: 'cocinas',
    icon: 'M8 5v14h11v-2H10V5H8zM4 5h2v14H4V5zm9 0h2v8h-2V5zm3 0h2v8h-2V5zm3 0h2v8h-2V5z',
    title: 'Cocinas',
    description: 'Modernas y Funcionales'
  },
  {
    slug: 'banos',
    icon: 'M7 7a2 2 0 014 0v8H7V7zm13 2H8v10h12V9zm-2 8H10v-6h8v6z',
    title: 'BaÃ±os',
    description: 'Tu Oasis Privado'
  },
  {
    slug: 'pintura',
    icon: 'M18 4V3c0-.55-.45-1-1-1H5c-.55 0-1 .45-1 1v4c0 .55.45 1 1 1h12c.55 0 1-.45 1-1V6h1v4H9v11c0 .55.45 1 1 1h2c.55 0 1-.45 1-1v-9h8V4h-3z',
    title: 'Pintura',
    description: 'Acabados Impecables'
  },
  {
    slug: 'reformas-integrales',
    icon: 'M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3zm0 2.7L18 11v8h-2v-6h-8v6H6v-8l6-5.3z',
    title: 'Reformas Integrales',
    description: 'Transformaciones Totales'
  }
];
---

<section>
  <!-- Section Header -->
  {showTitle && (
    <div class="px-4 pt-8 pb-3">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-[#1a2a3a] text-2xl font-bold">Mis Servicios</h3>
        <a href="/servicios" class="text-[#cd5a37] text-sm font-bold hover:underline flex items-center gap-1">
          <span>Ver Todo</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      {linkToDetails && (
        <p class="text-zinc-600 text-sm">
          ðŸ‘† Pincha en cualquier servicio para conocerlo en detalle
        </p>
      )}
    </div>
  )}

  <!-- Service Grid -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 px-4">
    {services.map(service => {
      const Element = linkToDetails ? 'a' : 'div';
      const href = linkToDetails ? `/servicios/${service.slug}` : undefined;
      
      return (
        <Element 
          href={href}
          class={`group flex flex-col gap-3 rounded-xl border-2 ${linkToDetails ? 'border-zinc-200 hover:border-[#cd5a37]' : 'border-zinc-200'} bg-white p-5 shadow-sm hover:shadow-xl transition-all hover:-translate-y-2 ${linkToDetails ? 'cursor-pointer' : ''} relative overflow-hidden`}
        >
          {/* Indicador de click (solo si es clicable) */}
          {linkToDetails && (
            <div class="absolute top-3 right-3 w-6 h-6 rounded-full bg-[#cd5a37]/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-4 h-4 text-[#cd5a37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          )}
          
          <div class="w-12 h-12 rounded-lg bg-[#cd5a37]/10 group-hover:bg-[#cd5a37] flex items-center justify-center transition-colors">
            <svg class="w-6 h-6 text-[#cd5a37] group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d={service.icon}/>
            </svg>
          </div>
          <div>
            <h2 class="text-[#1a2a3a] text-base font-bold group-hover:text-[#cd5a37] transition-colors">
              {service.title}
            </h2>
            <p class="text-zinc-500 text-xs font-normal">{service.description}</p>
          </div>
        </Element>
      );
    })}
  </div>
</section>