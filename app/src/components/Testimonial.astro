---
interface Props {
  rating?: number;
  text: string;
  author: string;
  service?: string; // Nuevo: ej. "Reforma de Baño"
}

const { rating = 5, text, author, service = "Cliente Verificado" } = Astro.props;
---

<div class="p-8 rounded-2xl bg-gradient-to-br from-[#1a2a3a] to-[#0f172a] text-white shadow-xl border border-white/5 flex flex-col h-full relative overflow-hidden group">
  <span class="absolute -top-2 -right-2 text-8xl text-white/5 font-serif group-hover:text-[#cd5a37]/10 transition-colors">“</span>

  <div class="flex gap-1 mb-4">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg 
        class={`w-4 h-4 ${i < rating ? 'text-yellow-400' : 'text-zinc-600'}`} 
        fill="currentColor" 
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>
  
  <blockquote class="flex-grow">
    <p class="text-lg leading-relaxed mb-6 font-medium italic">
      "{text}"
    </p>
  </blockquote>

  <div class="flex items-center gap-4 pt-6 border-t border-white/10">
    <div class="w-12 h-12 rounded-full bg-[#cd5a37] flex items-center justify-center font-bold text-lg shadow-lg">
      {author.charAt(0)}
    </div>
    <div class="text-left">
      <p class="font-bold text-base leading-tight">{author}</p>
      <div class="flex items-center gap-1.5 mt-1">
        <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
        <p class="text-[11px] uppercase tracking-wider text-zinc-400 font-semibold">
          {service}
        </p>
      </div>
    </div>
  </div>
</div>