---
// ZonasTrabajo.astro - Zonas de cobertura
const zonas = [
  {
    categoria: "Madrid Capital",
    lugares: [
      "Centro",
      "Chamberí", 
      "Salamanca",
      "Retiro",
      "Chamartín",
      "Moncloa",
      "Arganzuela",
      "Carabanchel"
    ]
  },
  {
    categoria: "Corredor del Henares",
    lugares: [
      "Alcalá de Henares",
      "Torrejón de Ardoz",
      "San Fernando de Henares",
      "Coslada",
      "Paracuellos de Jarama",
      "Mejorada del Campo",
      "Daganzo de Arriba", 
      "Ajalvir"
    ]
  },
  {
    categoria: "Sur de Madrid",
    lugares: [
      "Getafe",
      "Leganés",
      "Fuenlabrada",
      "Móstoles",
      "Alcorcón",
      "Parla"
    ]
  },
  {
    categoria: "Norte y Noroeste",
    lugares: [
      "Las Rozas",
      "Majadahonda",
      "Pozuelo de Alarcón",
      "Boadilla del Monte",
      "Tres Cantos",
      "Alcobendas",
      "Algete",
      "Colmenar Viejo"
    ]
  }
];
---

<section class="px-4 py-20 bg-zinc-50">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-2 mb-4 text-xs font-black tracking-widest uppercase bg-[#cd5a37]/10 text-[#cd5a37] rounded-full">
        Zona de trabajo
      </span>
      <h2 class="text-3xl md:text-4xl font-black text-[#1a2a3a] mb-4">
        Dónde trabajo
      </h2>
      <p class="text-lg text-zinc-600 max-w-2xl mx-auto">
        Cubro toda la <strong>Comunidad de Madrid</strong> y alrededores. 
        Si tu zona no aparece en el listado, 
        <a href="/contacto" class="text-[#cd5a37] font-bold hover:underline">consúltame</a>.
      </p>
    </div>

    <!-- Grid de zonas -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
      {zonas.map(zona => (
        <div class="bg-white rounded-xl p-6 border border-zinc-200 hover:border-[#cd5a37]/30 hover:shadow-lg transition-all">
          <div class="flex items-center gap-2 mb-4">
            <svg class="w-5 h-5 text-[#cd5a37] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <h3 class="font-black text-[#1a2a3a] text-sm">
              {zona.categoria}
            </h3>
          </div>
          
          <ul class="space-y-2">
            {zona.lugares.map(lugar => (
              <li class="flex items-start gap-2 text-sm text-zinc-700">
                <span class="inline-block w-1.5 h-1.5 rounded-full bg-[#cd5a37] mt-1.5 flex-shrink-0"></span>
                <span>{lugar}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Info adicional -->
    <div class="bg-white rounded-xl p-6 border-2 border-[#cd5a37]/20 text-center max-w-3xl mx-auto">
      <div class="flex items-center justify-center gap-3 mb-3">
        <svg class="w-6 h-6 text-[#cd5a37]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h4 class="font-bold text-[#1a2a3a] text-lg">¿Tu zona no está en la lista?</h4>
      </div>
      <p class="text-zinc-600 mb-4">
        Trabajo en muchas más localidades de la Comunidad de Madrid. 
        Escríbeme y te confirmo disponibilidad para tu zona.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a 
          href="/contacto"
          class="inline-flex items-center justify-center gap-2 bg-[#cd5a37] hover:bg-[#b54f30] text-white font-bold px-6 py-3 rounded-xl transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Consultar mi zona
        </a>
        <a 
          href="tel:+34600123456"
          class="inline-flex items-center justify-center gap-2 bg-white border-2 border-zinc-200 hover:border-[#cd5a37] text-[#1a2a3a] font-bold px-6 py-3 rounded-xl transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Llamar ahora
        </a>
      </div>
    </div>
  </div>
</section>