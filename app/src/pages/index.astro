---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroHome from '../components/HeroHome.astro';
import ServicesGrid from '../components/ServicesGrid.astro';
import ProjectsCarousel from '../components/ProjectsCarousel.astro';
import Testimonial from '../components/Testimonial.astro';
import BottomNav from '../components/BottomNav.astro';
import Preloader from '../components/Preloader.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Footer from '../components/Footer.astro';
import FAQ from '../components/Faq.astro';
import ZonasTrabajo from '../components/ZonasTrabajo.astro';
import AboutMe from '../components/AboutMe.astro';
import '../styles/global.css';
---

<Layout
  title="Estepa Reformas | Reformas integrales en Madrid"
  description="Reformas integrales, baños y cocinas en Madrid. Presupuesto claro, acabados profesionales y trato directo desde el primer día."
  schema={{
    '@context': 'https://schema.org',
    '@type': 'LocalBusiness',
    name: 'Estepa Reformas',
    description:
      'Reformas integrales, baños y cocinas en Madrid con trato directo, presupuesto transparente y acabados profesionales.',
    url: 'https://www.estepareformas.es',
    areaServed: 'Madrid',
    telephone: '+34 633 680 002'
  }}
>
  <Preloader />
  <Header currentPath="/" />

  <HeroHome
    title="Reformas con acabado profesional,<br/><span style='color:#cd5a37'>sin líos</span>."
    subtitle="Trato directo conmigo desde el primer día. Te digo lo que se puede hacer, cuánto cuesta y en qué plazo."
  />

  <main class="max-w-7xl mx-auto pb-20 md:pb-8">

    {/* SOBRE MÍ */}
    <AboutMe
      name="Samuel Estepa"
      city="Madrid"
      years="5+"
      imageUrl="/img/pintor.webp"
      imageAlt="Samuel Estepa trabajando en una reforma"
      ctaPrimaryHref="/contacto"
      ctaSecondaryHref="#proyectos"
    />

    {/* SERVICIOS */}
    <section id="servicios" class="animate-on-scroll">
      <ServicesGrid linkToDetails={true} />
    </section>

    {/* PROYECTOS */}
    <section id="proyectos" class="animate-on-scroll">
      <ProjectsCarousel />
    </section>

    {/* BENEFICIOS */}
    <section id="beneficios" class="px-4 py-16 bg-white">
      <div class="max-w-6xl mx-auto text-center">
        <div class="animate-on-scroll">
          <span class="text-[#cd5a37] font-black tracking-widest uppercase text-xs">Diferenciales</span>
          <h2 class="text-3xl md:text-4xl font-black text-[#1a2a3a] mt-2">
            Reformas en Madrid con cero sorpresas
          </h2>
          <p class="mt-4 text-lg text-[#1a2a3a]/80 max-w-3xl mx-auto">
            Planificamos cada paso, cuidamos los acabados y te informamos en todo momento para que tu reforma sea
            tranquila y sin imprevistos.
          </p>
        </div>

        <div class="mt-10 grid gap-6 md:grid-cols-3">
          <div class="bg-[#f6f5f3] rounded-2xl p-6 shadow-sm animate-on-scroll">
            <h3 class="text-xl font-black text-[#1a2a3a] mb-3">Presupuesto claro</h3>
            <p class="text-[#1a2a3a]/80">
              Te explico cada partida para que sepas cuánto cuesta tu reforma y por qué.
            </p>
          </div>
          <div class="bg-[#f6f5f3] rounded-2xl p-6 shadow-sm animate-on-scroll delay-100">
            <h3 class="text-xl font-black text-[#1a2a3a] mb-3">Coordinación total</h3>
            <p class="text-[#1a2a3a]/80">
              Gestión completa de gremios, materiales y tiempos para que no tengas que preocuparte.
            </p>
          </div>
          <div class="bg-[#f6f5f3] rounded-2xl p-6 shadow-sm animate-on-scroll delay-200">
            <h3 class="text-xl font-black text-[#1a2a3a] mb-3">Acabados premium</h3>
            <p class="text-[#1a2a3a]/80">
              Detalles cuidados, limpieza al finalizar y garantía de trabajo bien hecho.
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* TESTIMONIOS */}
    <section id="opiniones" class="px-4 py-20 bg-zinc-50">
      <div class="max-w-5xl mx-auto text-center">

        <div class="animate-on-scroll">
          <span class="text-[#cd5a37] font-black tracking-widest uppercase text-xs">Opiniones reales</span>
          <h2 class="text-3xl md:text-4xl font-black text-[#1a2a3a] mt-2 mb-12">
            Lo que dicen mis clientes
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="animate-on-scroll delay-100">
            <Testimonial
              text="Transformaron nuestra vieja cocina en una obra maestra moderna. Profesionales de principio a fin."
              author="Elena Rodríguez"
              service="Reforma de Cocina"
              rating={5}
            />
          </div>
          <div class="animate-on-scroll delay-200">
            <Testimonial
              text="Estepa es un crack. Reformó mi baño en tiempo récord y quedó perfecto. Trato cercano y precio justo."
              author="Carlos Martín"
              service="Reforma de Baño"
              rating={5}
            />
          </div>
        </div>

        <div class="mt-10 flex items-center justify-center gap-2 opacity-60 animate-on-scroll delay-300">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12.48 10.92v3.28h4.78c-.19 1.02-1.2 3.08-4.78 3.08-3.09 0-5.61-2.56-5.61-5.71s2.52-5.71 5.61-5.71c1.76 0 2.94.75 3.61 1.39l2.58-2.49C16.99 2.59 14.92 1.5 12.48 1.5 6.69 1.5 2 6.2 2 12s4.69 10.5 10.48 10.5c5.96 0 10.28-4.13 10.28-10.19 0-.69-.07-1.21-.16-1.73h-10.12z"/>
          </svg>
          <span class="text-sm font-medium">Reseñas verificadas de clientes</span>
        </div>

      </div>
    </section>

    {/* CTA FINAL */}
    <section class="px-4 py-8 animate-on-scroll animate-scale">
      <div class="bg-[#1a2a3a] rounded-2xl p-8 lg:p-12 text-center text-white shadow-2xl relative overflow-hidden">
        <div class="absolute inset-0 opacity-40">
          <div class="absolute -top-24 -right-24 w-80 h-80 rounded-full bg-[#cd5a37]/40 blur-3xl"></div>
        </div>

        <div class="relative">
          <h2 class="text-3xl lg:text-4xl font-black mb-4">
            ¿Hablamos de tu proyecto?
          </h2>
          <p class="text-lg text-white/80 mb-8 max-w-2xl mx-auto">
            Cuéntame qué necesitas y te doy un presupuesto sin compromiso.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contacto"
              class="inline-flex items-center justify-center gap-2 bg-[#cd5a37] hover:bg-[#b54f30] text-white font-black px-8 py-4 rounded-xl transition-all shadow-lg"
            >
              Pedir presupuesto
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </a>

            <a
              href="https://wa.me/34600123456"
              target="_blank"
              class="inline-flex items-center justify-center gap-2 bg-[#25D366] hover:brightness-110 text-white font-black px-8 py-4 rounded-xl transition-all"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884"/>
              </svg>
              WhatsApp
            </a>
          </div>
        </div>
      </div>
    </section>

  </main>

  <FAQ />
  <ZonasTrabajo />
  <Footer />
  <BottomNav currentPath="/" />
  <WhatsAppButton phoneNumber="34633680002" />
</Layout>
