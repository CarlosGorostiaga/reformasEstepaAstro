---
import Layout from '../../layouts/Layout.astro';
import ServiceDetail from '../../components/ServicesDetail.astro';
import BottomNav from '../../components/BottomNav.astro';
import '../../styles/global.css';

const service = {
  title: 'Remodelación de Baños',
  subtitle: 'Tu Oasis Privado',
  category: 'Renovación Premium',
  description: 'Transformamos tu baño en un santuario de relajación. Utilizamos materiales de primera calidad, grifería de alta gama y revestimientos cerámicos seleccionados para garantizar durabilidad y un diseño atemporal.',
  heroImage: 'https://images.unsplash.com/photo-1552321554-5fefe8c9ef14?w=1200',
  time: '10-15 días hábiles',
  materials: 'Mármol y Porcelanato',
  gallery: [
    {
      image: 'https://images.unsplash.com/photo-1620626011761-996317b8d101?w=800',
      title: 'Baño Minimalista',
      location: 'Madrid, 2024'
    },
    {
      image: 'https://images.unsplash.com/photo-1552321554-5fefe8c9ef14?w=800',
      title: 'Toque Moderno',
      location: 'Barcelona, 2023'
    },
    {
      image: 'https://images.unsplash.com/photo-1584622650111-993a426fbf0a?w=800',
      title: 'Estilo Zen',
      location: 'Valencia, 2024'
    }
  ]
};
---

<Layout 
  title="Remodelación de Baños - Estepa Reformas"
  description="Reforma completa de baños con materiales premium. Presupuesto gratuito."
>
  <ServiceDetail service={service} />
  <BottomNav currentPath="/servicios" />
</Layout>