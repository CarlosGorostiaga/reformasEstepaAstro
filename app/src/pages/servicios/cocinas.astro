---
import Layout from '../../layouts/Layout.astro';
import ServiceDetail from '../../components/ServicesDetail.astro';
import BottomNav from '../../components/BottomNav.astro';
import '../../styles/global.css';

const service = {
  title: 'Remodelación de Cocinas',
  subtitle: 'Modernas y Funcionales',
  category: 'Renovación Premium',
  description: 'Transformamos tu cocina en el corazón de tu hogar. Utilizamos materiales de primera calidad, electrodomésticos de alta gama y acabados perfectos para garantizar durabilidad y un diseño atemporal que se adapta a tu estilo de vida.',
  heroImage: 'https://images.unsplash.com/photo-1556909212-d5b604d0c90d?w=1200',
  time: '15-20 días hábiles',
  materials: 'Silestone, Dekton, Madera',
  gallery: [
    {
      image: 'https://images.unsplash.com/photo-1556911220-bff31c812dba?w=800',
      title: 'Cocina Minimalista',
      location: 'Madrid, 2024'
    },
    {
      image: 'https://images.unsplash.com/photo-1556909212-d5b604d0c90d?w=800',
      title: 'Estilo Contemporáneo',
      location: 'Barcelona, 2024'
    },
    {
      image: 'https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?w=800',
      title: 'Cocina Americana',
      location: 'Valencia, 2023'
    }
  ]
};
---

<Layout 
  title="Remodelación de Cocinas - Estepa Reformas"
  description="Transformamos tu cocina con diseños modernos y funcionales. Presupuesto sin compromiso."
>
  <ServiceDetail service={service} />
  <BottomNav currentPath="/servicios" />
</Layout>