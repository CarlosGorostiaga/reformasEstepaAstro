---
import Layout from '../../layouts/Layout.astro';
import ServiceDetail from '../../components/ServicesDetail.astro';
import BottomNav from '../../components/BottomNav.astro';
import '../../styles/global.css';

const service = {
  title: 'Pintura Profesional',
  subtitle: 'Acabados Impecables',
  category: 'Renovación Estética',
  description: 'Pintores profesionales con años de experiencia. Utilizamos pinturas de alta calidad, preparación perfecta de superficies y técnicas avanzadas para conseguir acabados lisos, uniformes y duraderos. Trabajamos con pinturas ecológicas sin olores.',
  heroImage: 'https://images.unsplash.com/photo-1562259949-e8e7689d7828?w=1200',
  time: '3-7 días hábiles',
  materials: 'Pinturas Premium Ecológicas',
  gallery: [
    {
      image: 'https://images.unsplash.com/photo-1589939705384-5185137a7f0f?w=800',
      title: 'Pintura Interior',
      location: 'Madrid, 2024'
    },
    {
      image: 'https://images.unsplash.com/photo-1513694203232-719a280e022f?w=800',
      title: 'Acabados Lisos',
      location: 'Barcelona, 2024'
    },
    {
      image: 'https://images.unsplash.com/photo-1615873968403-89e068629265?w=800',
      title: 'Colores Modernos',
      location: 'Valencia, 2023'
    }
  ]
};
---

<Layout 
  title="Pintura Profesional - Estepa Reformas"
  description="Servicio de pintura profesional con acabados perfectos. Pinturas ecológicas sin olores."
>
  <ServiceDetail service={service} />
  <BottomNav currentPath="/servicios" />
</Layout>